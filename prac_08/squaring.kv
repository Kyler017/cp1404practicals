BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation : 'horizontal'

        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: False
            hint_text: 'number'

        Button:
            text: 'Square'
            on_press: app.handle_calculate(input_number.text.upper())
        Label:
            id: output_label
            text: '0.0'
            font_size: 48
            color: (1, 0.3, 0.7, 1)

    Label:
        text: 'Enter number n click square'
        font_size: 14
